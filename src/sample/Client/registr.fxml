<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Client.RegController">

    <HBox>
        <Label prefWidth="100" text="Login:" />
        <TextField fx:id="loginField" promptText="login" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox>
        <Label prefWidth="100" text="Password:" />
        <PasswordField fx:id="passwordField" promptText="password" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox>
        <Label prefWidth="100" text="Nickname:" />
        <TextField fx:id="nickField" promptText="nickname" HBox.hgrow="ALWAYS" />
    </HBox>

    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" />

    <Button onAction="#tryToReg" text="Зарегистрироваться" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
